<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="row"
            type="com.tvsoft.portfolioanalysis.ui.home.PortfolioRow" />
        <variable
            name="vm"
            type="com.tvsoft.portfolioanalysis.ui.home.PortfolioFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/balance"
            android:layout_width="@dimen/money_width"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/cellTextSize"
            app:money="@{row.balance}"
            app:currency="@{row.currency}"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/profit"
            android:layout_width="@dimen/money_width"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/cellTextSize"
            app:money="@{row.profit}"
            app:currency="@{row.currency}"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/dividends"
            android:layout_width="@dimen/money_width"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/cellTextSize"
            app:money="@{row.dividends}"
            app:currency="@{row.currency}"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/earliestDate"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/cellTextSize"
            android:text="@{row.earliestDate}"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/averageRate"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/cellTextSize"
            android:text="@{row.averageRate}"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/tax"
            android:layout_width="@dimen/money_width"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/cellTextSize"
            app:money="@{row.tax}"
            app:currency="@{row.currency.RUB}"
            android:background="@drawable/border"
            />

        <TextView
            android:id="@+id/profitWithoutTax"
            android:layout_width="@dimen/money_width"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="@dimen/cellTextSize"
            app:money="@{row.profitWithoutTax}"
            app:currency="@{row.currency}"
            android:background="@drawable/border"
            />
    </LinearLayout>

</layout>