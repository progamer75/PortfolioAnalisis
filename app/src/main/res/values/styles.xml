<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewTextStyle">BottomNavigationViewTextStyle
        <item name="android:textSize">10sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="PortfolioStatText">PortfolioStatText
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="PortfolioHeaderText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/cellTextSize</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="PortfolioDataText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_height</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/cellTextSize</item>
    </style>

    <style name="PortfolioDataLayout">
        <item name="android:layout_width">@dimen/money_width</item>
        <item name="android:layout_height">@dimen/cell_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/border</item>
    </style>

</resources>